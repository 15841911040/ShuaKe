<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lyh_adt.shuake.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="刷课"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:text="学校：南华大学"
        android:textSize="25sp"
        android:id="@+id/textView_school" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_school"
        android:text="学号："
        android:textSize="25sp"
        android:id="@+id/textView_username" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/textView_school"
        android:layout_toEndOf="@+id/textView_username"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_username"
        android:text="密码："
        android:textSize="25sp"
        android:id="@+id/textView_paswd"  />
    <EditText
        android:id="@+id/et_pasw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/textView_paswd"
        android:layout_below="@id/et_username"
        android:inputType="textPassword"
        android:text=""/>

    <TextView
        android:id="@+id/textView_valcode"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="验证码："
        android:textSize="25sp"
        android:layout_below="@id/textView_paswd" />

    <EditText
        android:id="@+id/et_valcode"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/textView_valcode"
        android:layout_below="@id/et_pasw"
        android:inputType="number"/>

    <ImageView
        android:id="@+id/iv_valcode"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_pasw"
        android:layout_toEndOf="@id/et_valcode" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_valcode"
        android:text="登录"
        android:textSize="25sp"/>


</RelativeLayout>
